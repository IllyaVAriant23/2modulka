#include <stdio.h>

void dlakilk(float array[], int n) {
    printf("Введіть елементи масиву:\n");
    for (int i = 0; i < n; i++) {
        printf("a%d: ", i + 1);
        scanf("%f", &array[i]);
    }
}
void dlamasiv(float array[], int n) {
    printf("Елементи масиву:\n");
    for (int i = 0; i < n; i++) {
        printf("a%d: %.2f\n", i + 1, array[i]);
    }
}
float sumamasiv(float array[], int n) {
    float sum = 0;
    for (int i = 0; i < n; i++) {
        if ((int)array[i] % 2 == 0) {
            sum += array[i];
        }
    }
    return sum;
}
int main() {
    int n;
    printf("Введіть кількість елементів масиву: ");
    scanf("%d", &n);

    float array[n];

    dlakilk(array, n);
    dlamasiv(array, n);

    float sum = sumamasiv(array, n);
    printf("Сума парних елементів: %.2f\n", sum);

    return 0;
}
