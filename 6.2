#include <stdio.h>

void inputMatrix(int matrix[][100], int rows, int columns) {
    printf("Введіть елементи матриці:\n");
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            printf("Елемент [%d][%d]: ", i+1, j+1);
            scanf("%d", &matrix[i][j]);
        }
    }
}

void outputMatrix(int matrix[][100], int rows, int columns) {
    printf("Матриця елементів:\n");
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            printf("%d ", matrix[i][j]);
        }
        printf("\n");
    }
}

void calculateCMatrix(int matrixC[][100], int matrixA[][100], int matrixB[][100], int rows, int columns) {
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            if (matrixA[i][j] > matrixB[i][j]) {
                matrixC[i][j] = matrixA[i][j] + 2;
            } else if (matrixA[i][j] < matrixB[i][j]) {
                matrixC[i][j] = matrixA[i][j] - 2;
            } else {
                matrixC[i][j] = matrixA[i][j] * 2;
            }
        }
    }
}

int main() {
    int n, m;
    printf("Введіть кількість рядків матриці: ");
    scanf("%d", &n);
    printf("Введіть кількість стовпців матриці: ");
    scanf("%d", &m);

    int matrixA[100][100], matrixB[100][100], matrixC[100][100];

    printf("Матриця A:\n");
    inputMatrix(matrixA, n, m);
    printf("Матриця B:\n");
    inputMatrix(matrixB, n, m);

    outputMatrix(matrixA, n, m);
    outputMatrix(matrixB, n, m);

    calculateCMatrix(matrixC, matrixA, matrixB, n, m);

    printf("Матриця C:\n");
    outputMatrix(matrixC, n, m);

    return 0;
}
