#include <stdio.h>

void mat1(int matricha1[][100], int n) {
    printf("Введіть елементи матриці:\n");
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            scanf("%d", &matricha1[i][j]);
        }
    }
}
void matricha2(int matricha1[][100], int n) {
    printf("Елементи матриці:\n");
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            printf("%d ", matricha1[i][j]);
        }
        printf("\n");
    }
}
void dlarozrahuvania(int matricha[][100], int n) {
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (i < j) {
                matricha[i][j] = i - j;
            } else if (i == j) {
                matricha[i][j] = i + j / 2;
            } else {
                matricha[i][j] = i + j;
            }
        }
    }
}

int main() {
    int n, m;
    int matricha[100][100];

    printf("Введіть розмір матриці n: ");
    scanf("%d", &n);

    mat1(matricha, n);
    dlarozrahuvania(matricha, n);
    matricha2(matricha, n);

    return 0;
}
